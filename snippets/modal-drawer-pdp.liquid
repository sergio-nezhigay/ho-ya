<div class="product-popup-wrapper">
  <button 
    class="popup-trigger" 
    data-popup-trigger="size-chart-modal"
    type="button"
  >
    מפת מידות
  </button>

  <button 
    class="popup-trigger" 
    data-popup-trigger="light-intensity-modal"
    type="button"
  >
    מפת עוצמת אור
  </button>

  <div class="popup-modal desktop-modal" id="size-chart-modal">
    <div class="modal-overlay"></div>
    <div class="modal-content">
      <button class="modal-close" aria-label="Close">
        <svg width="20" height="20" viewBox="0 0 20 20">
